<Window x:Class="Registro_Carrera_y_Estudiante.UI.Registro.cEstudiante"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Registro_Carrera_y_Estudiante.UI.Registro"
        mc:Ignorable="d"
        Title="MainWindow" Height="765" Width="657">
    <Grid Height="778" VerticalAlignment="Top" Margin="0,0,10,0">
        <Label Content="EstudianteId" HorizontalAlignment="Left" Margin="26,56,0,0" VerticalAlignment="Top" Width="171" FontSize="30" Height="43" FontFamily="Times New Roman"/>
        <TextBox  x:Name="Estudiantetxt" Margin="35,104,450,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24"  FontSize="15" FontFamily="Times New Roman"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="26,208,0,0" VerticalAlignment="Top" Width="86" FontSize="30" Height="46" FontFamily="Times New Roman"/>
        <TextBox  x:Name="Emailtxt" HorizontalAlignment="Left" Margin="35,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" FontSize="15"  Height="26" FontFamily="Times New Roman" Text=""/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="26,128,0,0" VerticalAlignment="Top" Width="259" FontSize="30" FontFamily="Times New Roman"/>
       
        <Button  x:Name="guardar" Content="💾Guardar" HorizontalAlignment="Left" Margin="37,406,0,0" VerticalAlignment="Top" Click="guardar_Click"  FontSize="25" Foreground="#FF000DF6" FontFamily="Times New Roman"/>
        <Button  x:Name="eliminar" Content="❌Eliminar" HorizontalAlignment="Left" Margin="367,406,0,0" VerticalAlignment="Top" Click="eliminar_Click"   FontSize="25" Foreground="#FF000DF6" FontFamily="Times New Roman"/>
        <Button  x:Name="editar" Content="✔Editar" HorizontalAlignment="Left" Margin="212,406,0,0" VerticalAlignment="Top"  Click="editar_Click"  FontSize="25" Foreground="#FF000DF6" FontFamily="Times New Roman" Width="102" RenderTransformOrigin="0.56,-0.625"/>
     
        <Label Content="Estudiante" HorizontalAlignment="Left" Margin="222,0,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="Times New Roman" Foreground="Black" Width="176"/>
        <DataGrid  x:Name= "Ventanaconsultar" HorizontalAlignment="Left" Height="228" Margin="26,486,0,0" VerticalAlignment="Top" Width="589" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <TextBox x:Name="Nombretxt" HorizontalAlignment="Left" Height="26" Margin="37,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
        <CheckBox Content="Activo" HorizontalAlignment="Left" Margin="350,177,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label Content="CarreraId" HorizontalAlignment="Left" Height="49" Margin="26,290,0,0" VerticalAlignment="Top" Width="162" FontSize="30" FontFamily="Times New Roman"/>
        <TextBox  x:Name="Carreraidtxt" Margin="37,339,448,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="24"  FontSize="15" FontFamily="Times New Roman"/>
    </Grid>

</Window>
